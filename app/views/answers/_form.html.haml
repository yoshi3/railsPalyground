= form_for @answer do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :question_id
    = f.number_field :question_id
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :name
    = f.text_area :name
  .actions
    = f.submit 'Save'
