        <th>Message</th>
        <td>
            <a href="/messages/<%= @data.message.id %>">
                <%= @data.message.message %>
            </a>
        </td>
    </tr>
    <tr>
        <th>comment</th>
        <td><%= @data.comment %></td>
    </tr>
    <tr>
        <th>created</th>
        <td><%= @data.created_at %></td>
    </tr>
</table>
