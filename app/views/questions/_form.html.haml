= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :finished
    = f.check_box :finished
  .actions
    = f.submit 'Save'
